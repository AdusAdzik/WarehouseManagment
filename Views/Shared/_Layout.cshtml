<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WarehouseManagment</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
    <link href="~/lib/sweetalert/sweetalert2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body class="bg-dark text-light">
    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1"><i class="fas fa-warehouse me-2"></i> Warehouse Management</span>
            <div class="collapse navbar-collapse justify-content-end">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <partial name="_LoginPartial" />
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar bg-secondary text-light vh-100 shadow-lg">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-light py-3 d-flex align-items-center hover-highlight" href="@Url.Action("Index", "Home")">
                        <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                    </a>
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link text-light py-3 d-flex align-items-center hover-highlight" href="@Url.Action("Index", "Warehouses")">
                            <i class="fas fa-building me-2"></i> Warehouses
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light py-3 d-flex align-items-center hover-highlight" href="@Url.Action("Index", "Subcontractors")">
                            <i class="fas fa-users me-2"></i> Subcontractors
                        </a>
                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link text-light py-3 d-flex align-items-center hover-highlight" href="@Url.Action("Index", "Products")">
                        <i class="fas fa-box-open me-2"></i> Products
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="content flex-grow-1 p-4">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="footer bg-dark text-light py-3">
        <div class="container text-center">
            &copy; 2025 - WarehouseManagment - <a class="text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Load jQuery and Bootstrap -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- This is where page-specific scripts will be rendered -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
